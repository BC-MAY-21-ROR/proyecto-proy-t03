<div class="register_container">
  <h2 class="hello_h2"><%= t('greeting') %></h2>
  <p><%= t('new_account') %></p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "patients/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, class: 'form_field', placeholder: t('name'), autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.text_field :phone, autofocus: true, class: 'form_field', placeholder: t('phone'), autocomplete: "phone" %>
    </div>

    <div class="field">
      <%= f.text_field :country, autofocus: true, class: 'form_field', placeholder: t('country'), autocomplete: "country" %>
    </div>

    <div class="field">
      <%= f.date_field :birth, autofocus: true, class: 'form_field', placeholder: 'Date of Birth', autocomplete: "birth" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, class: 'form_field', placeholder: t('email'), autocomplete: "email" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, class: 'form_field', placeholder: t('password_lenght'), autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, class: 'form_field', placeholder: t('password_confirmation'), autocomplete: "new-password" %>
    </div>

    <div class="field mt-2 mb-2">
      <h4><%= t('gender') %></h4>
      <div class="flexbox">
        <div class="male">
          <%= f.radio_button(:gender, "male") %>
          <%= f.label(:gender, t('male'), value: "male")%>
        </div>
        <div class="female">
          <%= f.radio_button(:gender, "female") %>
          <%= f.label(:gender, t('female'), value: "female")%>
        </div>
        <div class="binary">
          <%= f.radio_button(:gender, "Non-Binary") %>
          <%= f.label(:gender, t('other'), value: "non-binary")%>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('sign_up'), class: 'sign_up_btn' %>

    </div>
  <% end %>

  <div class="links">
    <h3><%= t('account_question') %></h3> <%= render "patients/shared/links" %>
  </div>
</div>
