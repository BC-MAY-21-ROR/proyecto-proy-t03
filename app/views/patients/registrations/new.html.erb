<div class="register_container">
  <h2 class="hello_h2">Hello!</h2>
  <p>Create New account here. </p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "patients/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, class: 'form_field', placeholder: 'Full Name', autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.text_field :phone, autofocus: true, class: 'form_field', placeholder: 'Phone', autocomplete: "phone" %>
    </div>

    <div class="field">
      <%= f.text_field :country, autofocus: true, class: 'form_field', placeholder: 'Country', autocomplete: "country" %>
    </div>

    <div class="field">
      <%= f.date_field :birth, autofocus: true, class: 'form_field', placeholder: 'Date of Birth', autocomplete: "birth" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, class: 'form_field', placeholder: 'Email', autocomplete: "email" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, class: 'form_field', placeholder: 'Password (6 characters minimum)', autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, class: 'form_field', placeholder: 'Password confirmation', autocomplete: "new-password" %>
    </div>

    <div class="field mt-2 mb-2">
      <h4>Select yor gender</h4>
      <div class="flexbox">
        <div class="male">
          <%= f.radio_button(:gender, "male") %>
          <%= f.label(:gender, "Male", value: "male")%>
        </div>
        <div class="female">
          <%= f.radio_button(:gender, "female") %>
          <%= f.label(:gender, "Female", value: "female")%>
        </div>
        <div class="binary">
          <%= f.radio_button(:gender, "Non-Binary") %>
          <%= f.label(:gender, "Non-Binary", value: "non-binary")%>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'sign_up_btn' %>
    </div>
  <% end %>

  <div class="links">
    <h3>Do you have an account?</h3>  <%= render "patients/shared/links" %>
  </div>

</div>