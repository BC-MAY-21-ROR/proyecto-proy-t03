<div class="container-fluid">
  <section class="psychologist-info">
    <div class="psychologist-info-top">
      <%= image_tag("user.svg", alt: "User img", class:"psychologist-info_img")%>
      <div class="psychologist-info-about">
        <h1 class="psychologist-info-about_muted-head mb-4 mt-2"><%= current_psychologist.name %></h1>
        <h2 class="psychologist-info-about_muted top"><%= t('about_me')%></h2>
          <% if !current_psychologist.description %>
            <div class="psychologist-info-about_textarea_alone mb-3"></div>
          <% else %>
            <div class="psychologist-info-about_txtarea text-wrap">
              <p class="psychologist-info-about_txtarea-text">
               <%= current_psychologist.description %>
              </p>
            </div>
          <% end %> 
        <h2 class="fw-bolde"><%= t('specialities') %></h2>
        <p class="btn btn-primary text-white mt-4"><%= current_psychologist.speciality %></p>
      </div>
    </div>

    <div class="psychologist-info-profesional">
      <p class="psychologist-info-profesional_text"> 
        <span><%= t('age')%>:</span>
        <%= age(current_psychologist) %>
      </p>

      <p class="psychologist-info-profesional_text">
        <span><%= t('country')%>:</span>
        <%= current_psychologist.country %>
      </p>

      <p class="psychologist-info-profesional_text">
        <span><%= t('phone')%>:</span>
        <%= current_psychologist.phone %>
      </p>

      <p class="psychologist-info-profesional_text">
        <span><%= t('email')%>:</span>
        <%= current_psychologist.email %>
      </p>

      <p class="psychologist-info-profesional_text">
        <span><%= t('register') %>:</span> <br>
        <%= current_psychologist.professional_register %>
      </p>
    </div>

    <%= link_to t("edit_profile"), edit_psychologist_registration_path, class:"buton_edit mb-2"%>
  </section>
</div>
