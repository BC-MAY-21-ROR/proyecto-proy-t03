          <% @psychologist.each do |p|%>
             <%= p.name if a.psychologist_id == p.id%> 
          <% end %> <br>
          <a><%= t('date') %>: </a> <%= a.datetime %> <br>
          <a><%= t('price') %>: </a> $23 usd
        </p>
      </div>
      <div class="middle-content">
        <p>
